<head>
 <%= stylesheet_link_tag "buyer1" %>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

    <body class="background-image" onload="initialize()">
      <div class="row " style="padding-top: 6%;">
        <div class="col s1">
        </div>
      <div class="col s5">
        <%= simple_form_for @lead, url: landing_path, remote: true do |f| %>
          <%= f.input :source, :as => :hidden, input_html: { value: 'Buyer Form 1'} %>
          <%= f.input :buysell, :as => :hidden, input_html: { value: 'Buyer'} %>
          <%= f.input :first_name , :as => :hidden, input_html: { value: 'anonymous'} %>
          <%= f.input :last_name , :as => :hidden, input_html: { value: 'anonymous'} %>
          <%= f.input :leadstatus , :as => :hidden, input_html: { value: 'partial'} %>
          <div id="address-form">
            <h1><strong>Looking To Buy A Property?</h1></strong>
            <h5 style="padding-bottom: 3%;">Search For The Property Address Below</h5>
            <div id="locationField">
              <%= f.input :address, input_html: { id: 'autocomplete', onFocus: 'geolocate()' }, placeholder: 'Enter a location and select from the following list...' %>
              <br/>
              <%= f.input :unit, placeholder: 'Unit #'%>
              <%= f.input :postalcode, :as => :hidden, input_html: { id: 'postal_code', class: 'field' } %>
              <div class="center-align">
                <!--<button id="form-continue" type="button" class="waves-effect waves-light btn" style="display:none; ">Click Here To Continue <i class="material-icons right">send</i></button>-->
                <%= f.button :submit ,:id => "form-continue", :class => "btn formbtn waves-effect waves-light" , value: 'Click Here To Continue', :style => "display:none;margin-top: 4%; font-size: 20px;" %>
              </div>
            </div>
          </div>
            <% end %>
        <%= simple_form_for @lead, url: landing_path do |f| %>
          <div id="secondary-form" style="display:none;">
            <h1><strong>Property Found!</h1></strong>
            <h5 style="padding-bottom: 3%;">Let Us Help You By Leaving Your Information Below</h5>
            <%= f.input :leadstatus , :as => :hidden, input_html: { value: 'full'} %>
            <%= f.input :first_name , placeholder: 'First Name...' %>
            <%= f.input :last_name , placeholder: 'Last Name...' %>

            <%= f.input :phone , placeholder: 'Phone Number...' %>
            <%= f.input :email , placeholder: 'Email Address...' %>

            <%= f.input :desireddeal ,label: 'Desire Date To Purchase' , placeholder: 'Please Select From The Calendar...'%>

            <%= f.input :extrainfo, label: 'Other Information', placeholder: 'Please Write Down Any Information You Would Like To Share With Us...' %>

            <%= f.button :submit , :class => "btn formbtn" , value: 'Submit Information' %>

          </div>
            <table id="address" style="display: none">
              <tr>
                <td class="label">Street address</td>
                <td class="slimField"><input class="field" id="street_number"
                                             disabled="true"></input></td>
                <td class="wideField" colspan="2"><input class="field" id="route"
                                                         disabled="true"></input></td>
              </tr>
              <tr>
                <td class="label">City</td>
                <td class="wideField" colspan="3"><input class="field" id="locality"
                                                         disabled="true"></input></td>
              </tr>
              <tr>
                <td class="label">Province</td>
                <td class="slimField"><input class="field"
                                             id="administrative_area_level_1" disabled="true"></input></td>
                <td class="label">Postal code</td>
                <td class="wideField"><input class="field" id="postal_code"
                                             disabled="true"></input></td>
              </tr>
              <tr>
                <td class="label">Country</td>
                <td class="wideField" colspan="3"><input class="field"
                                                         id="country" disabled="true"></input></td>
              </tr>
            </table>
        <% end %>
      </div>
      <div class="col s3">
      </div>
      </div>
    </body>
