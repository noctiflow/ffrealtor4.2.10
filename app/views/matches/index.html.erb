<style>
  #filter {
    width: 100%;
  }
  #filter td,
  th {
    border: 3px black solid;
  }
  #filter th {
    font-size: 1.2em;
  }
  #filter td {
    text-align: right;
    padding-right: 5px;
  }
  .infoheader {
    border: 3px black solid;
    display: inline;
    flex: 1;
    text-align: center;
  }
  .innerbox {
    /*border-bottom:3px black solid;*/
    width: 33.33%;
    display: inline-block;
    text-align: center;
  }
</style>
<h2>Potential Matching Contacts</h2>
<hr>
<% lastcity = "" %>
  <% @contacts.each do |contact| %>
    <% if lastcity == "" || lastcity != contact.lead.cityname %>
      <!--also if where has buyer && where has seller-->
      <% lastcity = contact.lead.cityname %>
        <div id="<%=lastcity%>">
          <h2><%= lastcity %></h2>
          <div style="width:100%;display:flex;">
            <div class="infoheader">
              <h3>Buyers</h3>
            </div>
            <div class="infoheader">
              <h3>Sellers</h3>
            </div>
          </div>
          <div style="width:100%;display:flex;">
            <div class="infoheader">
              <h4>Name</h4>
            </div>
            <div class="infoheader">
              <h4>Area</h4>
            </div>
            <div class="infoheader">
              <h4>Desire Date</h4>
            </div>
            <div class="infoheader">
              <h4>Name</h4>
            </div>
            <div class="infoheader">
              <h4>Address</h4>
            </div>
            <div class="infoheader">
              <h4>Desire Date</h4>
            </div>
          </div>
          <div style="width:100%;display:flex;">
            <div style="border:3px black solid;float:left;flex:1;" class="buyers <%= lastcity %>"></div>
            <div style="border:3px black solid;float:right;flex:1" class="sellers <%= lastcity %>"></div>
          </div>
        </div>
      <% end %>
      <% if contact.lead.buysell == "Buyer" %>
        <script type="text/javascript" charset="utf-8">
          $('.buyers.<%= lastcity %>').append('<div class="innerbox"><%= link_to "#{contact.first_name} #{contact.last_name}", contact_path(contact.id) %></div><div class="innerbox"><%= contact.lead.neighbourhood %></div><div border-bottom: 1px black solid;" class="innerbox">N/A</div>');
        </script>
        <% elsif contact.lead.buysell == "Seller" %>
          <script type="text/javascript" charset="utf-8">
            $('.sellers.<%= lastcity %>').append('<div class="innerbox"><%= link_to "#{contact.first_name} #{contact.last_name}", contact_path(contact.id) %></div><div class="innerbox"><%= contact.lead.address %></div><div class = "innerbox"><%= contact.lead.desireddeal %></div>');
          </script>
        <% end %>
      <% end %>
      <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
          $("#main > div").each(function (k, v) {
            cityname = $(this).attr("id");
            if ($("." + cityname + ".buyers").children().length && $("." + cityname + ".sellers").children().length) {
              console.log("k");
            } else {
              $(this).hide();
            }
          });
        })
      </script>