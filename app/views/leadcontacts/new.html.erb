<div class="title">
  <span>
    New Lead
  </span>
  <%= link_to 'Back', '/leadcontacts' %>
</div>
<div class="remote">
  <%= simple_form_for @lead, url:leadcontacts_path do |f| %>
      <%= f.input :islead , :as => :hidden, input_html: { value: 'true'} %>
      <%= f.input :first_name %>
      <!--req-->
      <%= f.input :last_name %>
      <!--req-->
      <%= f.input :phone %>
      <%= f.input :email, input_html: { maxlength: 50 } %>
      <%= f.input :occupation %>
      <%= f.input :buysell %>
      <!--change to dropdown ^-->
      <%= f.input :assigned_to %>
      <!--change to dropdown ^-->
      <%= f.input :desireddeal %>
      <!--change to dropdown ^-->
      <%= f.input :address %>
      <%= f.input :unit %>
      <%= f.input :city %>
      <!--force capitalize^-->
      <%= f.input :postalcode %>
      <%= f.input :neighbourhood %>
      <!--force capitalize^-->
      <%= f.input :propertytype %>
      <!--change to dropdown^-->
      <%= f.input :price %>
      <%= f.input :buildingage %>
      <%= f.input :bedrooms %>
      <%= f.input :bathrooms %>
      <%= f.submit "Create Lead" %>
  <% end %>
</div>
<script type="text/javascript" charset="utf-8">
  $(function() {
    $('li > a').css('background-color', '#466BB1');
    $('li > a').css('color', '#eee');
    $('a[href$="leadcontacts"]').css('background-color', '#e5e5e5');
    $('a[href$="leadcontacts"]').css('color', 'black');
  })
</script>