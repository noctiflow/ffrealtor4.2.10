<%# app/views/contacts/_list.html.erb %>
<div id="filterrific_results">

  <div>
    <%= page_entries_info contacts %>(s)
  </div>
  <br>
  <style>
    #filter{
      width:100%;
    }
    #filter td,th{
      border:thin black solid;
    }
    #filter th{
      font-size:1.2em;
    }
    #filter td{
      text-align: right;
      padding-right:5px;
    }
    .tablecss td{
      text-align: center !important;
      font-size: 1.3em;
    }
  </style>
  <%= form_tag destroy_multiple_contacts_path, method: :delete do %>
  <table class="tablecss" id="filter">
    <tr style="text-align: center;">
      <th>Name</th>
      <th>Buyer/Seller</th>
      <th>Assigned to</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Registered at</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% contacts.each do |contact| %>
        <tr>
          <td><%= link_to(contact.full_name, contact_path(contact)) %></td>
          <td><%= contact.lead.buysell if contact.lead.present? %></td>
          <td><%= User.where(:id => contact.assigned_to).last.username if contact.assigned_to.present? %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.decorated_created_at %></td>
          <td style="text-decoration: none; color:black;"><%= link_to(contact_path(contact)) do %><i class="fa fa-pencil"></i><% end %></td>
          <!--<td><%# link_to('x', contact_path(contact), data: {:confirm => "Are you sure?"}, :method => :delete) %></td>-->
          <!--<td><%# check_box_tag("delete[#{contact.id}]",1) %></td>-->
          <td><%= check_box_tag("contact_ids[]",contact.id,false,class: "deletecheck") %></td>
        </tr>
    <% end %>
  </table>
  <%= submit_tag "delete selected", id: "delsubmit" %>
  <% end %>
  <input value="Select All" type="submit" id="checkAll">
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $('input:checkbox').prop('checked', false);
    $('#delsubmit').click(function() {
      return window.confirm("Are you sure?");
    });
    $("#checkAll").click(function(){
      $('input:checkbox').prop('checked', true);
    });
  });
</script>

<%= will_paginate contacts %>
